pipeline {
    agent any
    stages {
        stage('Checking for file availability') {
            steps {
                script {
                    if (fileExists(main.go)) {
                        echo "File main.go found"
                    } else {
                        error "File main.go not found"
                    }
                }
            }
        }
    }
    post{
        success{
            echo 'You can go home'
        }
        failure{
            echo 'Sit and work on'
        }
    }
}
